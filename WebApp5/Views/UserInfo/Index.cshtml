@model UserInfo

<div class="container mt-5">
    <h2 class="text-center mb-4">Введите ваши данные</h2>
    <form asp-action="Index" asp-controller="UserInfo" method="post" class="mx-auto p-4 border rounded" style="max-width: 600px;" novalidate>
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" placeholder="Введите имя">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" placeholder="Введите фамилию">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Group" class="form-label"></label>
            <input asp-for="Group" class="form-control" placeholder="Введите группу">
            <span asp-validation-for="Group" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Оценки</label>
            <div>
                @for (int i = 0; i < 3; i++)
                {
                    <input asp-for="@Model.Grades[i].Value" class="form-control mb-2" placeholder="Оценка @(i + 1)" min="0" max="100">
                    <span asp-validation-for="@Model.Grades[i].Value" class="text-danger"></span>
                }
            </div>
            <small class="form-text text-muted">Заполните все поля оценок (от 0 до 100).</small>
        </div>

        <div class="mb-3">
            <label asp-for="ProgrammingLanguages" class="form-label"></label>
            <select asp-for="ProgrammingLanguages" class="form-control" multiple>
                @foreach (var language in new[] { "C#", "Java", "Python", "JavaScript", "C++" })
                {
                    <option value="@language">@language</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary w-100">Отправить</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
