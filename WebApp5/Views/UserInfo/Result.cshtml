@{
    ViewData["Title"] = "Результаты";
}

<div class="container mt-5">
    <h2 class="mb-4">Результаты</h2>
    <p><strong>ФИО:</strong> @ViewBag.FullName</p>
    <p><strong>Средний балл:</strong> @ViewBag.AverageGrade</p>
    <p><strong>Языки программирования:</strong> @string.Join(", ", ViewBag.Languages)</p>
    <p><strong>Количество языков:</strong> @ViewBag.LanguagesCount</p>
    <a asp-action="Index" asp-controller="UserInfo" class="btn btn-secondary mt-3">Вернуться к форме</a>
</div>
